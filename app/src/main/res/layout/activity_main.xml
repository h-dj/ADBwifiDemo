<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333c3c3c"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.h_dj.adbwifidemo.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <com.coorchice.library.SuperTextView
            android:id="@+id/connAdb"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="connect adb"
            app:corner="10dp"
            app:solid="#3c3c3c"
            app:text_fill_color="@android:color/darker_gray"
            app:text_stroke="true"/>

        <com.coorchice.library.SuperTextView
            android:id="@+id/stopAdb"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="stop adb"
            app:corner="10dp"
            app:solid="#3c3c3c"
            app:text_fill_color="@android:color/darker_gray"
            app:text_stroke="true"/>

        <com.coorchice.library.SuperTextView
            android:id="@+id/reStartAdb"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="restart adb"
            app:corner="10dp"
            app:solid="#3c3c3c"
            app:text_fill_color="@android:color/darker_gray"
            app:text_stroke="true"/>

        <EditText
            android:id="@+id/et_packageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="com.example.h_dj.adbwifidemo"/>

        <com.coorchice.library.SuperTextView
            android:id="@+id/uninstallAdb"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="uninstall adb"
            app:corner="10dp"
            app:solid="#3c3c3c"
            app:text_fill_color="@android:color/darker_gray"
            app:text_stroke="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <com.coorchice.library.SuperTextView
                android:id="@+id/killApp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="kill app"
                app:corner="10dp"
                app:solid="#3c3c3c"
                app:text_fill_color="@android:color/darker_gray"
                app:text_stroke="true"/>

            <com.coorchice.library.SuperTextView
                android:id="@+id/killCurrentApp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="kill current app"
                app:corner="10dp"
                app:solid="#3c3c3c"
                app:text_fill_color="@android:color/darker_gray"
                app:text_stroke="true"/>
        </LinearLayout>

        <com.coorchice.library.SuperTextView
            android:id="@+id/startApp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="start app"
            app:corner="10dp"
            app:solid="#3c3c3c"
            app:text_fill_color="@android:color/darker_gray"
            app:text_stroke="true"/>

        <com.coorchice.library.SuperTextView
            android:id="@+id/clearAppCache"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="clear App Cache"
            app:corner="10dp"
            app:solid="#3c3c3c"
            app:text_fill_color="@android:color/darker_gray"
            app:text_stroke="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <com.coorchice.library.SuperTextView
                android:id="@+id/rebootPhone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="rebootPhone"
                app:corner="10dp"
                app:solid="#3c3c3c"
                app:text_fill_color="@android:color/darker_gray"
                app:text_stroke="true"/>

            <com.coorchice.library.SuperTextView
                android:id="@+id/closePhone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="closePhone"
                app:corner="10dp"
                app:solid="#3c3c3c"
                app:text_fill_color="@android:color/darker_gray"
                app:text_stroke="true"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
